<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/container_media_center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_default_height"
        android:background="@color/brown"
        android:gravity="center" >

        <TextView
            android:id="@+id/text_mediaCenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_item"
            android:gravity="center"
            android:text="@string/media_center"
            android:textColor="@color/font_white"
            android:textSize="@dimen/actionbar_title_size" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/about_qatar_tabs_seperator_height"
            android:background="@color/tabs_seperator_bg" />

        <TextView
            android:id="@+id/text_projects"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_item"
            android:gravity="center"
            android:text="@string/projects"
            android:textColor="@color/font_white"
            android:textSize="@dimen/actionbar_title_size" />
    </LinearLayout>

</LinearLayout>
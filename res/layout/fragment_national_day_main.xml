<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/about_qatar_category_layout_padding" >

        <com.noqwerty.sqw.customviews.ResizableImageView
            android:layout_width="@dimen/national_logo_dimen"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/national_day_logo" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/about_qatar_category_text_margin_top"
            android:text="text text text"
            android:textColor="@color/font_dark_brown"
            android:textSize="@dimen/text_medium" />
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageButton
        android:background="@drawable/actionbar_icon"
        android:id="@+id/button_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/actionbar_icon_padding"
        android:paddingRight="@dimen/actionbar_icon_padding"
        android:src="@drawable/app_icon" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/app_title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/actionbar_title_size" />

    <ImageButton
        android:background="@drawable/actionbar_icon"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:id="@+id/button_play"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/actionbar_icon_padding"
        android:paddingRight="@dimen/actionbar_icon_padding"
        android:src="@drawable/actionbar_play"
        android:visibility="gone" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>